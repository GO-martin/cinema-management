<div class="mx-auto md:h-screen flex flex-col justify-center items-center px-6 pt-8 pt:mt-0">
  <a href="" class="text-2xl font-semibold flex justify-center items-center mb-8 lg:mb-10">
    <%# <img src="/images/logo.svg" class="h-10 mr-4" alt="Windster Logo"> %>
    <%= image_tag("logo.png", class: "h-20 mr-4", alt: "Retro Cinema") %>
    <span class="self-center text-2xl font-bold whitespace-nowrap">Retro Cinema</span>
  </a>
  <!-- Card -->
  <div class="bg-white shadow rounded-lg md:mt-0 w-full sm:max-w-screen-sm xl:p-0">
    <div class="p-6 sm:p-8 lg:p-16 space-y-8">
      <h2 class="text-2xl lg:text-3xl font-bold text-gray-900">
        Sign in to platform
      </h2>
      <!-- Sign-in Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }, data: {turbo: false}) do |f| %>
        <div class="field">
          <%= f.label :email, class: "text-sm font-medium text-gray-900 block mb-2" %>
          <%= f.email_field :email, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-cyan-600 focus:border-cyan-600 block w-full p-2.5", placeholder: "name@company.com", required: true %>
        </div>
        <div class="field">
          <%= f.label :password, class: "text-sm font-medium text-gray-900 block mb-2" %>
          <%= f.password_field :password, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-cyan-600 focus:border-cyan-600 block w-full p-2.5", placeholder: "••••••••", required: true %>
        </div>
        <div class="field flex items-start">
          <div class="flex items-center h-5">
            <%= f.check_box :remember_me, class: "bg-gray-50 border-gray-300 focus:ring-3 focus:ring-cyan-200 h-4 w-4 rounded", required: true %>
          </div>
          <div class="text-sm ml-3">
            <%= f.label :remember_me, class: "font-medium text-gray-900" %>
          </div>
          <%= link_to "Lost Password?", "#", class: "text-sm text-teal-500 hover:underline ml-auto" %>
        </div>
        <div class="actions">
          <%= f.submit "Login to your account", class: "text-white bg-cyan-600 hover:bg-cyan-700 focus:ring-4 focus:ring-cyan-200 font-medium rounded-lg text-base px-5 py-3 w-full sm:w-auto text-center" %>
        </div>
        <div class="text-sm font-medium text-gray-500">
          Not registered? <%= link_to "Create account", new_user_registration_path , class: "text-teal-500 hover:underline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
